{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "packages/*/src",
    "**/*.d.ts"
  ]
}